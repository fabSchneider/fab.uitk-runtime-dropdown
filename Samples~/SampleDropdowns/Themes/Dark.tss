@import url("unity-theme://default");

@import url("/Packages/com.fab.uitk-runtime-dropdown/UI/DropdownStyle.uss");
@import url("/Packages/com.fab.uitk-runtime-dropdown/Samples/SampleDropdowns/DropdownExampleStyles.uss");

:root{
    --fab-dropdown-sample-text-color: rgb(180, 180, 180);
    --fab-dropdown-sample-button-color:  rgb(48, 48, 48);
    --fab-dropdown-sample-button-open-color: rgb(64, 64, 64);
    --fab-dropdown-sample-button-color-hover:  rgb(54, 54, 54);
    --fab-dropdown-sample-button-color-active:  rgb(64, 64, 64);
    --fab-dropdown-sample-button-border-color: rgb(68, 68, 68);
    --fab-dropdown-sample-button-border-radius: 8px;
}

.fab-dropdown{
    --fab-dropdown-menu-horizontal-offset: 2px;
    --fab-dropdown-menu-padding: 4px;
    --fab-dropdown-menu-border-radius: 6px;

    --fab-dropdown-menu-bkg-color: var(--fab-dropdown-sample-button-open-color);
    --fab-dropdown-menu-border-color: rgb(80, 80, 80);

    --fab-dropdown-separator-color: rgba(255, 255, 255, 0.1);

    --fab-dropdown-arrow-color: rgb(200, 200, 200);
    --fab-dropdown-checkmark-color: rgb(200, 200, 200);

    --fab-dropdown-item-focus-color: rgba(255, 255, 255, 0.15);
    --fab-dropdown-item-open-color:  rgba(255, 255, 255, 0.08);
}

.fab-dropdown__menu > .fab-dropdown__menu-container{
    opacity: 0;
}

.fab-dropdown__menu.fab-dropdown__menu--open > .fab-dropdown__menu-container{
    transition-property: opacity;
    transition-duration: 0.2s;
    opacity: 1;
}

.fab-dropdown__item {
    border-radius: 2px;
}

